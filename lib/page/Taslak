import 'package:flutter/material.dart';
import 'package:HomePage/page/HomePage.dart';
import 'package:HomePage/page/ShopPage.dart';
import 'package:HomePage/page/AccountPage.dart';

class RentPage extends StatefulWidget {
  const RentPage({super.key});

  @override
  State<RentPage> createState() => _RentPageState();
}
class _RentPageState extends State<RentPage> {
  @override
  bool isIndividualSelected = false;
  bool isCorporateSelected = false;
  List<Map<String, dynamic>> BireyselList = [
    {'Image': 'images/animal_shelter/shelter1.jpg','ad': 'Ayşe', 'soyad': 'Fatma', 'konum': 'balıkesir', 'yaş':'28'},
    {'Image': 'images/pets_images/image1.jpg','ad': 'Jane', 'soyad': 'Smith', 'konum': 'antep', 'yaş':'25'},
    {'Image': 'images/animal_shelter/shelter1.jpg','ad': 'Michael', 'soyad': 'Johnson', 'konum': 'adana', 'yaş':'35'},
    {'Image': 'images/animal_shelter/shelter1.jpg','ad': 'Michael', 'soyad': 'Johnson', 'konum': 'adana', 'yaş':'35'},
  ];
  List<Map<String, dynamic>> BarinakList = [
    {'Image': 'images/animal_shelter/shelter1.jpg','ad': 'Ayşe', 'soyad': 'Fatma', 'konum': 'balıkesir', 'yaş':'28'},
    {'Image': 'images/pets_images/image1.jpg','ad': 'Jane', 'soyad': 'Smith', 'konum': 'antep', 'yaş':'25'},
    {'Image': 'images/animal_shelter/shelter1.jpg','ad': 'Michael', 'soyad': 'Johnson', 'konum': 'adana', 'yaş':'35'},
    {'Image': 'images/animal_shelter/shelter1.jpg','ad': 'Michael', 'soyad': 'Johnson', 'konum': 'adana', 'yaş':'35'},
  ];

  @override
  Widget build(BuildContext context) {
    return Scaffold(
      body: Center(
        child: Column(


            Row(
        mainAxisAlignment: MainAxisAlignment.center,
        children: [
          Row(
            mainAxisAlignment: MainAxisAlignment.center,
            children: [
              Icon(
                Icons.pets,
                color: Colors.pink,
              ),
              SizedBox(width: 8),
              Text(
                'PetGuardian',
                style: TextStyle(color: Colors.pink),
              ),
              SizedBox(width: 8),
              Icon(
                Icons.pets,
                color: Colors.pink,
              ),
            ],
          ),
          SizedBox(height: 20),
          Text(
            'Bakıcı Kiralama için Seçiniz',
            style: TextStyle(fontSize: 24,
              fontWeight: FontWeight.normal,
              color: Colors.black,),
          ),
          SizedBox(height: 20),
          Row(
            mainAxisAlignment: MainAxisAlignment.center,
            children: [
              Checkbox(
                value: isIndividualSelected,
                onChanged: (value) {
                  setState(() {
                    isIndividualSelected = value!;
                    isCorporateSelected = false;
                  });
                },
              ),
              Text('Bireysel'),
              SizedBox(width: 20),
              Checkbox(
                value: isCorporateSelected,
                onChanged: (value) {
                  setState(() {
                    isCorporateSelected = value!;
                    isIndividualSelected = false;
                  });
                },
              ),
              Text('Barınak'),
            ],
          ),
          SizedBox(height: 20),
          if (isIndividualSelected && !isCorporateSelected)
            Column(
              children: [
                for (var bireysel in BireyselList)
                  Column(
                    children: [
                      Row(
                        children: [
                          Image.asset(bireysel['Image'],width: 150,),
                          SizedBox(width: 16),
                          Column(
                            crossAxisAlignment: CrossAxisAlignment.center,
                            children: [
                              Text('Ad: ${bireysel['ad']}'),
                              Text('Soyad: ${bireysel['soyad']}'),
                              Text('Numara: ${bireysel['numara']}'),
                            ],
                          ),
                          SizedBox(width: 10),
                        ],
                      ),
                    ],
                  ),
              ],
            ),
          if (isCorporateSelected && !isIndividualSelected)
            Column(
              children: [
                for (var barinak in BarinakList)
                  Column(
                    children: [
                      Row(
                        children: [
                          Image.asset(barinak['Image'],width: 150,),
                          SizedBox(width: 16),
                          Column(
                            crossAxisAlignment: CrossAxisAlignment.center,
                            children: [
                              Text('Ad: ${barinak['ad']}'),
                              Text('Soyad: ${barinak['soyad']}'),
                              Text('Numara: ${barinak['numara']}'),
                            ],
                          ),
                          SizedBox(width: 10),
                        ],
                      ),
                    ],
                  ),
                  ],
                  ),
                  ],
                  ),
          ],
        ),

    bottomNavigationBar: BottomAppBar(

    child: Row(
    mainAxisAlignment: MainAxisAlignment.spaceEvenly,
    children: [
    ElevatedButton(
    onPressed: () {
    Navigator.push(
    context,
    MaterialPageRoute(builder: (context) => HomePage()),
    );
    },
    style: ElevatedButton.styleFrom(
    foregroundColor: Colors.white,
    backgroundColor: Colors.pink,
    ),
    child: Row(
    children: [
    Icon(Icons.home),
    SizedBox(width: 8),
    Text('Ana Sayfa'),
    ],
    ),
    ),
    ElevatedButton(
    onPressed: () {
    Navigator.push(
    context,
    MaterialPageRoute(builder: (context) => ShopPage()),
    );
    },
    style: ElevatedButton.styleFrom(
    foregroundColor: Colors.white,
    backgroundColor: Colors.pink,
    ),
    child: Row(
    children: [
    Icon(Icons.shopping_cart),
    SizedBox(width: 8),
    Text('Market'),
    ],
    ),
    ),
    ElevatedButton(
    onPressed: () {
    Navigator.push(
    context,
    MaterialPageRoute(builder: (context) => AccountPage()),
    );
    },
    style: ElevatedButton.styleFrom(
    foregroundColor: Colors.white,
    backgroundColor: Colors.pink,
    ),
    child: Row(
    children: [
    Icon(Icons.person),
    SizedBox(width: 8),
    Text('Hesap'),
    ],
    ),
    ),
    ],
    ),
    ),
    ),


    );


  }
}

